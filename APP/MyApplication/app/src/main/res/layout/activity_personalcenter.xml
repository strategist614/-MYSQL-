<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/personalcenter"
    >
    <View
        android:id="@+id/vi_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@drawable/personalcenterback"
        />
    <TextView
        android:id="@+id/Txt_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:textSize="35sp"
        android:textColor="#000000"
        android:text="个人中心"
        />
    <ImageView
        android:id="@+id/iv_user_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:layout_below="@id/Txt_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/personalpicture"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tv_student_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_user_photo"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textStyle="italic"/>
    <Button
        android:id="@+id/btn_user_info"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:text="个人信息"
        android:textSize="20sp"
        android:layout_below="@+id/tv_student_number"
        android:layout_marginTop="10dp"
        android:background="@drawable/login"/>
    <Button
        android:id="@+id/btn_my_goods"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:text="我的发布"
        android:textSize="20sp"
        android:layout_below="@+id/btn_user_info"
        android:layout_marginTop="10dp"
        android:background="@drawable/login"/>
    <Button
        android:id="@+id/btn_about_app"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:text="关于系统"
        android:textSize="20sp"
        android:layout_below="@+id/btn_my_goods"
        android:layout_marginTop="10dp"
        android:background="@drawable/login"/>
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:text="退出登录"
        android:textSize="20sp"
        android:layout_below="@+id/btn_about_app"
        android:layout_marginTop="10dp"
        android:background="@drawable/login"/>
    <Button
        android:id="@+id/btn_back"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="返回"
        android:textSize="20sp"
        android:background="@drawable/login"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="115dp"/>
</RelativeLayout>